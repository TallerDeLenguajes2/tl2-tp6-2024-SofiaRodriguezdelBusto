@model List<Presupuesto>

<h2>Presupuestos</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Destinatario</th>
            <th>Fecha de Creacion</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var presupuesto in Model)
        {
            <tr>
                <td>@presupuesto.NombreDestinatario</td>
                <td>@presupuesto.FechaCreacion.ToShortDateString()</td>
                <td>
                    <a asp-controller="Presupuestos" asp-action="ObtenerDetallesDelPresupuesto" asp-route-id="@presupuesto.IdPresupuesto" class="btn btn-info">Detalles</a>
                    <a asp-controller="Presupuestos" asp-action="ModificarPresupuesto" asp-route-id="@presupuesto.IdPresupuesto" class="btn btn-warning">Editar</a>
                    <a asp-controller="Presupuestos" asp-action="EliminarPresupuestoPorId" asp-route-id="@presupuesto.IdPresupuesto" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-controller="Productos" asp-action="AltaProducto" class="btn btn-success">Alta producto</a>
</div>
