<h2>Lista de Productos</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.IdProducto</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio.ToString("C")</td>
                <td>
                    <a asp-controller="Productos" asp-action="Detalles" asp-route-id="@producto.IdProducto" class="btn btn-info">Detalles</a>
                    <a asp-controller="Productos" asp-action="ModificarProducto" asp-route-id="@producto.IdProducto" class="btn btn-warning">Editar</a>
                    <a asp-controller="Productos" asp-action="EliminarProductoPorId" asp-route-id="@producto.IdProducto" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>





